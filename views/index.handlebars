<div class="container">
  <h1 class="header center red-text">Associated Press Top News</h1>
  <h5 class="header center red-text">Mongo Scraper</h5>

  <div class="row center">
    <a href="/scrape" id="scrapeBtn" class="btn-large waves-effect waves-light black-text lime lighten-1">Scrape
      Articles</a>
  </div>

</div>

<div class="container">

  {{!-- ARTICLES DIV --}}
  <div id="articlesDiv" class="section">


    {{#each article}}
    <div class="col s12 m3">
      <div class="card horizontal">
        <div class="card-stacked">
          <div class="card-content">
            <h5> {{this.title}} </h5>
          </div>
          <div class="card-content">
            <p> {{this.summary}} </p>
          </div>
          <div class="card-action">
            <a href="https://www.apnews.com{{this.link}}" target="_blank" class="btn-small waves-effect waves-light black-text lime lighten-1">Read
              Article</a>
            <a id="saveArticleBtn" data="{{this._id}}" class="btn-small waves-effect waves-light black-text lime lighten-1">Save
              Article</a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}

  </div>

</div>

